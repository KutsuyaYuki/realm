{
  "name": "bin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/bin/src",
  "targets": {
    "build": {
      "executor": "qwik-nx:build",
      "options": {
        "runSequence": ["bin:build.client", "bin:build.ssr"],
        "outputPath": "dist/apps/bin"
      },
      "configurations": {
        "preview": {},
        "production": {}
      }
    },
    "build.client": {
      "executor": "@nx/vite:build",
      "options": {
        "outputPath": "dist/apps/bin",
        "configFile": "apps/bin/vite.config.ts"
      }
    },
    "build.ssr": {
      "executor": "@nx/vite:build",
      "defaultConfiguration": "preview",
      "options": {
        "outputPath": "dist/apps/bin"
      },
      "configurations": {
        "preview": {
          "ssr": "src/entry.preview.tsx",
          "mode": "production"
        },
        "production": {
          "configFile": "apps/bin/adapters/netlify/vite.config.ts"
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "options": {
        "buildTarget": "bin:build",
        "port": 4300
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["../../coverage/apps/bin"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/apps/bin"
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "buildTarget": "bin:build.client",
        "mode": "ssr",
        "port": 4200
      }
    },
    "serve.debug": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node --inspect-brk ../../node_modules/vite/bin/vite.js --mode ssr --force",
        "cwd": "apps/bin"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/bin/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "build-netlify": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx nx run bin:build:production"
      }
    },
    "deploy-netlify": {
      "executor": "qwik-nx:exec",
      "options": {
        "command": "npx netlify deploy --build --dir=client",
        "cwd": "dist/apps/bin"
      },
      "dependsOn": ["build-netlify"]
    },
    "preview-netlify": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx netlify dev --dir=client",
        "cwd": "dist/apps/bin"
      },
      "dependsOn": ["build-netlify"]
    }
  },
  "tags": []
}
