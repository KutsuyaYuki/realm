---
import "../../styles/globals.css";
import { Code } from 'astro/components';
import { Home, PlusCircle } from "lucide-solid";
const { slug } = Astro.params;
if (slug === undefined) {
  throw new Error("Slug is required");
}

const url = new URL(`/api/v2/paste?id=${slug}`, import.meta.env.DEVELOPMENT === "true" ? "http://localhost:3000" : Astro.url);

const item = await fetch(url).catch((err) => {
  throw new Error(err);
});
const data = (await item.json().catch((err) => {
  throw new Error(err);
}))[0];
---

<html>
  <head>
    <title>{data.id}</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <script>
      import "../../scripts/router.js"
    </script>
  </head>
  <body class="bg-[#1E1E1E]">
    <main
      id="main_realm"
      data-turn-enter
      data-turn-exit
      class="w-full"
    >
      <nav class="select-none bg-neutral-800 flex items-center gap-3 border-b sticky top-0 p-4 w-full border-neutral-700">
        <a href="/" class="min-w-fit flex items-center justify-center w-fit gap-0 md:gap-3 px-3 py-3 md:py-2 bg-neutral-900 rounded border border-neutral-700 hover:bg-opacity-50 transition text-neutral-200">
          <Home size={18} />
          <span class="hidden md:block">Back to Landing</span>
        </a>
        <h1 class="font-mono flex flex-col gap-0 text-neutral-200 w-full">
          <span class="text-sm">
            {data.id}
          </span>
          <span class="text-xs opacity-50">
            {data.lang}
          </span>
        </h1>
        <a href="/paste" class="min-w-fit flex items-center justify-center w-fit gap-0 md:gap-3 px-3 py-3 md:py-2 bg-neutral-900 rounded border border-neutral-700 hover:bg-opacity-50 transition text-neutral-200">
          <PlusCircle size={18} />
          <span class="hidden md:block">New Paste</span>
        </a>
      </nav>
      <article class="w-full p-4 flex">
        <Code code={data.content} theme="dark-plus" lang={data.lang} />
      </article>
    </main>
  </body>
</html>